<%- include('includes/header'); %>
<%- include('includes/nav'); %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">faça login ou crie a sua conta abaixo.</p>

          <%- include('includes/messages'); %>

          <div class="row">
            <div class="col-lg">
              <h4>Faça seu cadastro</h4>
              <p>Se você ainda não tem conta preencha o formulário abaixo.</p>

              <form action="/login/registrar" method="POST">
                <div class="form-group">
                  <label for="email">Seu Email</label>
                  <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                  <label for="senha">Sua Senha</label>
                  <input type="password" class="form-control" id="senha" name="senha">
                </div>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary">Criar minha conta</button>
              </form>
            </div>

            <div class="col-lg">
              <h4>Entrar no sistema</h4>
              <p>Se você já tem uma conta faça login abaixo.</p>

              <form action="/login/logar" method="POST">
                <div class="form-group">
                  <label for="email">Seu Email</label>
                  <input type="email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group">
                  <label for="senha">Sua Senha</label>
                  <input type="password" class="form-control" id="senha" name="senha">
                </div>

                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" class="btn btn-primary">Entrar</button>
              </form>
            </div>
          
          </div>
        </div>

        <div class="col-lg-2"></div>
      </div>
    </div>

<%- include('includes/footer'); %>